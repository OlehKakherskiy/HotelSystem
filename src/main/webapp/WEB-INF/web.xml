<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <display-name>Hotel System</display-name>
    <resource-ref>
        <description>Mysql Datasource For HotelSystem schema</description>
        <res-ref-name>jdbc/mysql</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>

    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>

    <filter>
        <filter-name>securityFilter</filter-name>
        <filter-class>main.java.com.epam.project4.controller.SecurityFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>securityFilter</filter-name>
        <url-pattern>/controller/*</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>universalServlet</servlet-name>
        <servlet-class>main.java.com.epam.project4.controller.UniversalServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>universalServlet</servlet-name>
        <url-pattern>/controller/*</url-pattern>
    </servlet-mapping>

    <error-page>
        <error-code>404</error-code>
        <location>/WEB-INF/404.jsp</location>
    </error-page>

    <!--<error-page>-->
        <!--<exception-type>main.java.com.epam.project4.model.exception.RequestException</exception-type>-->
        <!--<location>/WEB-INF/requestException.jsp</location>-->
    <!--</error-page>-->

